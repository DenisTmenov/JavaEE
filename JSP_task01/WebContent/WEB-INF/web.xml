<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>JSP_task01</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>indexJSP</servlet-name>
		<jsp-file>/WEB-INF/pages/indexJSP.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>indexJSP</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>formJSP</servlet-name>
		<jsp-file>/WEB-INF/pages/formJSP.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>formJSP</servlet-name>
		<url-pattern>/formOut</url-pattern>
	</servlet-mapping>
</web-app>